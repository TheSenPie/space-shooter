{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2015","dom"],
    "module": "commonjs",
    "typeRoots" : [ "./typings", "./node_modules/@types"],
    "strictFunctionTypes": true,
    "alwaysStrict": true ,
	  "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
